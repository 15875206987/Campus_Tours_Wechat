/* pages/search/search.wxss */
page{
  height: 100%;
  width: 100%;
  background: white;
}
.searchlayout{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-right: 20px;
}
/* 信息展示 */
.site_picture{
  width: 100px;
  height: 50px;
  margin-right: 5px;
}
.site_box{
  margin: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:solid 1px rgba(0, 0, 0, 0.137);
}
.site_info{
  display: flex;
  justify-content: space-start;
  align-items: center;
  margin-bottom: 5px;
}