/* pages/map/map.wxss */
page{
  height: 100%;
  background: white;
}
/* 地图css */
.map_container_before{ 
    height: 60%; 
    width: 100%; 
}
.map_container_after{ 
    height: 88%; 
    width: 100%; 
}

.map { 
    height: 100%; 
    width: 100%; 
} 

/* 信息盒子的css */
.info_box_before{
  height: 30%;
}
.info_box_after{
  height: 0%;
}
.info_box_button{
  height: 5%;
  margin: 0px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: solid 1px rgba(0, 0, 0, 0.137);
  border-top: solid 1px rgba(0, 0, 0, 0.137);
  color: rgba(16, 105, 207, 0.795);
}
/* 禁止页面滚动 */
page{
  overflow-y:hidden;
  height: 100%;
}
.scroll_parent{
  height: 100%;
}
/* 信息展示 */
.site_picture{
  width: 100px;
  height: 50px;
  margin-right: 5px;
}
.site_box{
  margin: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:solid 1px rgba(0, 0, 0, 0.137);
}
.site_info{
  display: flex;
  justify-content: space-start;
  align-items: center;
  margin-bottom: 5px;
}
/* 地图按钮组 */
.button-group{
  display: flex;
  flex-direction: column;
  background: white;
  opacity: 0.8;
  width: 35px;
  height: 70px;
  border: solid 1px gainsboro;
  border-radius: 10px;
  align-items: center;
  justify-content: center;
  margin: 10px;
}